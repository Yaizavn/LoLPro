
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8px">

    <TextView
        android:id="@+id/arbol_textInto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_into"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <GridView
        android:layout_height="0px"
        android:layout_weight="3"
        android:id="@+id/arbol_gridViewInto"
        android:layout_width="wrap_content"
        android:layout_below="@id/arbol_textInto"
        android:columnWidth="100dp"
        android:verticalSpacing="10dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth" />

    <TextView
        android:id="@+id/arbol_textNoInto"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/arbol_gridViewInto"
        android:text="@string/no_into"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/arbol_textFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/arbol_textNoInto"
        android:layout_marginTop="20dp"
        android:text="@string/text_from"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <GridView
        android:layout_height="0px"
        android:layout_weight="3"
        android:id="@+id/arbol_gridViewFrom"
        android:layout_width="wrap_content"
        android:layout_below="@id/arbol_textFrom"
        android:columnWidth="100dp"
        android:verticalSpacing="10dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth" />

    <TextView
        android:layout_height="0px"
        android:layout_weight="1"
        android:id="@+id/arbol_textNoFrom"
        android:layout_width="wrap_content"
        android:layout_below="@id/arbol_textFrom"
        android:text="@string/no_from"
        android:textAppearance="?android:attr/textAppearanceSmall" />


</LinearLayout>